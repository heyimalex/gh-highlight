        },
        {
          "match": ".",
          "name": "meta.clause.body.prolog"
        }
      ]
    },
    {
      "begin": "(?<=-->)\\s*",
      "end": "(\\.)[^(\\.\\.)]",
      "endCaptures": {
        "1": {
          "name": "keyword.control.dcg.bodyend.prolog"
        }
      },
      "name": "meta.dcg.body.prolog",
      "patterns": [
